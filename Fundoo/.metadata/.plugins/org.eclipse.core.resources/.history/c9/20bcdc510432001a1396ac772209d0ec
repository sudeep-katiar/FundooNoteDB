package com.blblz.fundoonotes.repository;

import java.util.Date;

import javax.xml.crypto.Data;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;

import com.blblz.fundoonotes.model.UserModel;

@Repository
public interface UserRepository extends JpaRepository<UserModel, Long> {
	
	@Query(value="Select * from user_model where email = :email",nativeQuery = true)
	UserModel findEmail(String email);

	@Query(value="insert into user_model (creator_stamp,email,firstname,is_verified,lastname,mobile,password,username) values (:creator_stamp,:email,:firstname,:is_verified,:lastname,:mobile,:password,:username)")
	void insertdata(Date creator_stamp,String email,String firstname,boolean is_verified,String lastname,long mobile,String password,String username);
	
}
